<h1>Sign Up</h1>
<form class="" action="/signup" method="post">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" name="email" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <!-- <div class="form-group">
    <label for="password_confirm">Confirm Password</label>
    <input type="password" class="form-control" name="confirmed_password" placeholder="Password">
  </div> -->
  <!-- CSRF TOKEN -->
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <button type="submit" name="button" class="btn btn-primary">Signup</button>
</form>
<hr>
{{#if errorMessage }}
  <div class="alert alert-danger" role="alert">
    {{errorMessage}}
  </div>
{{/if}}
<div class="alert alert-warning" role="alert">
  Already have an account? Please <a href="/login">Log in</a>
</div>
